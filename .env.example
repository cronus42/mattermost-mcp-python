# Mattermost Configuration
MATTERMOST_URL=https://your-mattermost-instance.com
MATTERMOST_TOKEN=your-mattermost-api-token
MATTERMOST_TEAM_ID=your-team-id-optional

# MCP Server Configuration
MCP_SERVER_HOST=localhost
MCP_SERVER_PORT=8000

# Logging Configuration
LOG_LEVEL=INFO
LOG_FORMAT=json

# Optional: Specific channel configurations
DEFAULT_CHANNEL_ID=your-default-channel-id
ALLOWED_CHANNELS=channel1,channel2,channel3

# Optional: User restrictions
ALLOWED_USERS=user1,user2,user3

# Optional: Feature flags
ENABLE_FILE_UPLOADS=true
ENABLE_WEBHOOKS=true
ENABLE_SLASH_COMMANDS=false

# Security
API_RATE_LIMIT=100
MAX_MESSAGE_LENGTH=4000
